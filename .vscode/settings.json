{
    "files.eol": "\n",
    "editor.defaultFormatter": "biomejs.biome", // https://biomejs.dev/ja/reference/vscode/
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "quickfix.biome": "explicit", // 保存時の修正をBiomeに任せる
        "source.organizeImports.biome": "explicit", // インポートの並び替え（実験的機能）
        "source.fixAll.stylelint": "explicit" // BiomeはCSSをfixしないのでstylelintを併用
    },
    "stylelint.validate": ["css", "scss", "less", "postcss"],
    "biome.rename": true // Biomeがワークスペースのリネームを検知する（実験的機能）
}
