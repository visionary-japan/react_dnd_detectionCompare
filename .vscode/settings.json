{
    "files.eol": "\n",
    "files.autoSave": "onFocusChange", // TODO これはローカルで設定すべき
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,
    // TODO 以下の内容をもとに更新する
    // https://biomejs.dev/ja/reference/vscode/
    "editor.codeActionsOnSave": {
        "quickfix.biome": "explicit", // 保存時の修正をBiomeに任せる
        "source.organizeImports.biome": "explicit", // インポートの並び替え
        "source.fixAll.stylelint": "explicit"
    },
    "stylelint.validate": ["css", "scss", "less", "postcss"]
}
